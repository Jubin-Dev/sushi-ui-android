<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.Sushi" parent="Theme.MaterialComponents.Light">
        <item name="android:colorBackground">@color/sushi_white</item>
        <item name="android:windowBackground">@color/sushi_white</item>
        <item name="android:textColorPrimary">@color/sushi_black</item>
        <item name="android:textColorSecondary">@color/sushi_grey_600</item>
        <item name="textColorSecondaryLight">@color/sushi_grey_400</item>
        <item name="colorError">@color/sushi_red_500</item>
        <item name="android:colorControlActivated">?colorPrimary</item>
    </style>

    <style name="Theme.Sushi" parent="Base.Theme.Sushi">
        <item name="android:fontFamily">?fontFamilyRegular</item>
        <item name="sushiIconAppearance">@style/TextAppearance.Sushi.Icon</item>
        <item name="textInputStyle">@style/Widget.Sushi.TextInputField</item>
        <item name="checkboxStyle">@style/Widget.Sushi.CompoundButton.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.Sushi.CompoundButton.RadioButton</item>
        <item name="buttonStyle">@style/Widget.Sushi.Button</item>
        <item name="tagStyle">@style/Widget.Sushi.Tag</item>
        <item name="ratingTagStyle">@style/Widget.Sushi.Tag.Rating</item>
        <item name="circleIconTextStyle">@style/Widget.Sushi.CircleIconView</item>
        <item name="tabStyle">@style/Widget.Sushi.TabLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.Sushi.BottomNavigationView</item>
    </style>

</resources>