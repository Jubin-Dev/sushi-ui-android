<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Commonly Used Styles -->
    <style name="Theme.Sushi.Listing">
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:padding">@dimen/sushi_spacing_macro</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="Theme.Sushi.Listing.HeadLine" parent="TextAppearance.Sushi.Medium">
        <item name="android:text">Headline Text</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/sushi_textsize_500</item>
        <item name="android:padding">@dimen/sushi_spacing_micro</item>
    </style>
    <style name="Theme.Sushi.Listing.Body" parent="TextAppearance.Sushi.Regular">
        <item name="android:text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam gravida</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:padding">@dimen/sushi_spacing_micro</item>
    </style>

    <style name="Theme.Sushi.Section.Heading" parent="TextAppearance.Sushi.Medium">
        <item name="android:text">Headline Text</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/sushi_textsize_700</item>
        <item name="android:padding">@dimen/sushi_spacing_mini</item>
    </style>

</resources>