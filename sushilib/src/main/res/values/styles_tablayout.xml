<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Sushi.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/sushi_red_500</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextColor">@color/sushi_grey_700</item>
        <item name="tabSelectedTextColor">@color/sushi_black</item>
        <item name="tabTextAppearance">@style/TextAppearance.Sushi.TabLayout</item>
    </style>

    <style name="TextAppearance.Sushi.TabLayout" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/okra_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sushi_textsize_500</item>
        <item name="android:letterSpacing">0</item>
    </style>

</resources>