<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.Sushi.Button" parent="">
        <item name="colorAccent">@color/sushi_green_500</item>
        <item name="fontFamily">?fontFamilyMedium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.Sushi.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:theme">@style/ThemeOverlay.Sushi.Button</item>
    </style>

    <style name="Widget.Sushi.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:theme">@style/ThemeOverlay.Sushi.Button</item>
    </style>

    <style name="Widget.Sushi.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:theme">@style/ThemeOverlay.Sushi.Button</item>
    </style>

</resources>