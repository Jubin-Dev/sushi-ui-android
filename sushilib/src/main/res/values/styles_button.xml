<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Sushi.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/okra_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.Sushi.Button.Large">
        <item name="iconSize">18dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/sushi_textsize_500</item>
    </style>

    <style name="Widget.Sushi.Button.Medium">
        <item name="iconSize">14dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textSize">@dimen/sushi_textsize_300</item>
    </style>

    <style name="Widget.Sushi.Button.Small">
        <item name="iconSize">12dp</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:textSize">@dimen/sushi_textsize_200</item>
    </style>

    <style name="Widget.Sushi.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/okra_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.Sushi.OutlinedButton.Large">
        <item name="iconSize">18dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/sushi_textsize_500</item>
    </style>

    <style name="Widget.Sushi.OutlinedButton.Medium">
        <item name="iconSize">14dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textSize">@dimen/sushi_textsize_300</item>
    </style>

    <style name="Widget.Sushi.OutlinedButton.Small">
        <item name="iconSize">12dp</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:textSize">@dimen/sushi_textsize_200</item>
    </style>

</resources>