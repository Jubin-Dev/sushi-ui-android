<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="sushiIconAppearance" format="reference" type="style" />
    <attr name="sushiCornerRadius" format="dimension" />
    <attr name="random" format="reference" />
    <attr name="baseColor" format="color" />

    <attr name="tagStyle" format="reference"/>
    <attr name="ratingTagStyle" format="reference"/>

    <!-- FOR TAGS AND EDIT TEXTS -->
    <attr name="drawableLeft" format="reference"/>
    <attr name="drawableRight" format="reference"/>
    <attr name="drawableStart" format="reference"/>
    <attr name="drawableEnd" format="reference"/>
    <attr name="drawablePadding" format="dimension"/>
    
    <!-- Rating States for ColorStateList -->
    <attr name="state_rating_1" format="boolean" />
    <attr name="state_rating_2" format="boolean" />
    <attr name="state_rating_3" format="boolean" />
    <attr name="state_rating_4" format="boolean" />
    <attr name="state_rating_5" format="boolean" />


    <declare-styleable name="SushiTagView">
        <attr name="sushiCornerRadius" />
        <attr name="zTagType" format="enum">
            <enum name="rounded" value="1" />
            <enum name="small_rounded" value="2" />
            <enum name="highlight" value="3" />
            <enum name="small_highlight" value="4" />
            <enum name="capsule" value="5" />
            <enum name="small_capsule" value="6" />
        </attr>
    </declare-styleable>


    <declare-styleable name="BaseRating">
        <attr name="rating" format="integer" />
    </declare-styleable>

    <declare-styleable name="SushiBigRatingTag">
        <attr name="baseColor" />
        <attr name="rating" />
    </declare-styleable>


    <declare-styleable name="SushiRatingBar">
        <attr name="rating" />
    </declare-styleable>

    <declare-styleable name="SushiSmallRatingBar">
        <attr name="rating" />
    </declare-styleable>

    <declare-styleable name="SushiListing">
        <attr name="titleText" format="string" />
        <attr name="subtitleText" format="string" />
        <attr name="labelText" format="string" />
        <attr name="imageSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="SushiImageDualTextView">
        <attr name="titleText" />
        <attr name="subtitleText" />
        <attr name="imageSrc"/>
    </declare-styleable>

    <declare-styleable name="SushiDualTextView">
        <attr name="titleText" />
        <attr name="subtitleText" />
    </declare-styleable>

    <declare-styleable name="SushiLabelDualTextView">
        <attr name="titleText" />
        <attr name="subtitleText" />
        <attr name="labelText" />
    </declare-styleable>
</resources>