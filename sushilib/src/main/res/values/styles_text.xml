<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SushiTheme.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/okra</item>
        <item name="android:textSize">@dimen/sushi_textsize_400</item>
    </style>

    <style name="SushiTheme.TextAppearance.SemiBold">
        <item name="android:fontFamily">@font/okra_semibold</item>
    </style>

    <style name="SushiTheme.TextAppearance.Icon">
        <item name="android:fontFamily">@font/wasabi</item>
    </style>


    <style name="SushiTheme.TagAppearance" parent="SushiTheme.TextAppearance">
        <item name="android:text">Testing tag</item>
    </style>

    <style name="SushiTheme.TagAppearance.RoundedTag" parent="SushiTheme.TagAppearance">
        <item name="zCornerRadius">@dimen/corner_radius</item>
        <item name="android:paddingLeft">@dimen/spacing_macro</item>
        <item name="android:paddingRight">@dimen/spacing_macro</item>
        <item name="android:paddingTop">@dimen/spacing_mini</item>
        <item name="android:paddingBottom">@dimen/spacing_mini</item>
        <item name="android:textSize">@dimen/sushi_textsize_500</item>
        <item name="sushiFontWeight">medium</item>
    </style>


    <style name="SushiTheme.TagAppearance.HighlightRoundedTag" parent="SushiTheme.TagAppearance.RoundedTag">
        <item name="sushiFontWeight">semibold</item>
        <item name="android:paddingTop">@dimen/spacing_macro</item>
        <item name="android:paddingBottom">@dimen/spacing_macro</item>
    </style>

    <style name="SushiTheme.TagAppearance.Capsule" parent="SushiTheme.TagAppearance.HighlightRoundedTag">
        <item name="zCornerRadius">@dimen/size_18</item>
        <item name="android:paddingLeft">@dimen/spacing_base</item>
        <item name="android:paddingRight">@dimen/spacing_base</item>
    </style>

    <style name="SushiTheme.TagAppearance.SmallCapsule" parent="SushiTheme.TagAppearance.SmallHighlightRoundedTag">
        <item name="zCornerRadius">@dimen/size_12</item>
        <item name="sushiFontWeight">medium</item>
        <item name="android:paddingLeft">@dimen/spacing_mini</item>
        <item name="android:paddingRight">@dimen/spacing_mini</item>
    </style>

    <style name="SushiTheme.TagAppearance.SmallHighlightRoundedTag" parent="SushiTheme.TagAppearance.HighlightRoundedTag">
        <item name="sushiFontWeight">regular</item>
        <item name="android:paddingTop">@dimen/spacing_nano</item>
        <item name="android:paddingBottom">@dimen/spacing_nano</item>
        <item name="android:paddingLeft">@dimen/spacing_nano</item>
        <item name="android:paddingRight">@dimen/spacing_nano</item>
        <item name="android:textSize">@dimen/sushi_textsize_200</item>
    </style>

    <style name="SushiTheme.TagAppearance.SmallRoundedTag" parent="SushiTheme.TagAppearance.RoundedTag">
        <item name="android:paddingLeft">@dimen/spacing_ultra_nano</item>
        <item name="android:paddingRight">@dimen/spacing_ultra_nano</item>
        <item name="android:paddingTop">@dimen/spacing_ultra_nano</item>
        <item name="android:paddingBottom">@dimen/spacing_ultra_nano</item>
        <item name="android:textSize">@dimen/sushi_textsize_200</item>
    </style>

</resources>