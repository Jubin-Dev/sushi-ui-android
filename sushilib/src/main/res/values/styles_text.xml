<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Sushi" parent="">
        <!-- We do not want to inherit from BaseTextAppearance etc as that
         sets a textSize here, which we do not want -->
        <item name="android:fontFamily">@font/okra</item>
    </style>

    <style name="TextAppearance.Sushi.Icon">
        <item name="android:fontFamily">@font/wasabi</item>
    </style>
  
  <!-- Basic Font Weight Styles -->
    <style name="TextAppearance.Sushi.Thin">
        <item name="android:fontFamily">@font/okra_thin</item>
    </style>
    <style name="TextAppearance.Sushi.ExtraLight">
        <item name="android:fontFamily">@font/okra_extralight</item>
    </style>
    <style name="TextAppearance.Sushi.Light">
        <item name="android:fontFamily">@font/okra_light</item>
    </style>
    <style name="TextAppearance.Sushi.Regular" />  
    <style name="TextAppearance.Sushi.SemiBold">
        <item name="android:fontFamily">@font/okra_semibold</item>
    </style>

    <style name="SushiTheme.TagAppearance" parent="SushiTheme.TextAppearance">
        <item name="android:text">Testing tag</item>
    </style>

    <style name="SushiTheme.TagAppearance.RoundedTag" parent="SushiTheme.TagAppearance">
        <item name="sushiCornerRadius">@dimen/sushi_corner_radius</item>
        <item name="android:paddingLeft">@dimen/sushi_spacing_macro</item>
        <item name="android:paddingRight">@dimen/sushi_spacing_macro</item>
        <item name="android:paddingTop">@dimen/sushi_spacing_mini</item>
        <item name="android:paddingBottom">@dimen/sushi_spacing_mini</item>
        <item name="android:textSize">@dimen/sushi_textsize_500</item>
        <item name="sushiFontWeight">medium</item>
    </style>
    
    <style name="SushiTheme.TagAppearance.Capsule" parent="SushiTheme.TagAppearance.HighlightRoundedTag">
        <item name="sushiCornerRadius">@dimen/sushi_large_capsule_tag_corner_radius</item>
        <item name="android:paddingLeft">@dimen/sushi_spacing_base</item>
        <item name="android:paddingRight">@dimen/sushi_spacing_base</item>
    </style>

    <style name="SushiTheme.TagAppearance.SmallCapsule" parent="SushiTheme.TagAppearance.SmallHighlightRoundedTag">
        <item name="sushiCornerRadius">@dimen/sushi_small_capsule_tag_corner_radius</item>
        <item name="sushiFontWeight">medium</item>
        <item name="android:paddingLeft">@dimen/sushi_spacing_mini</item>
        <item name="android:paddingRight">@dimen/sushi_spacing_mini</item>
    </style>
    

    <style name="SushiTheme.BigRatingTag" parent = "SushiTheme.TagAppearance.Capsule">
        <item name="android:minWidth">@dimen/sushi_big_rating_min_width</item>
    </style>

    <style name="SushiTheme.SmallRatingTag" parent = "SushiTheme.TagAppearance.SmallCapsule">
        <item name="android:minWidth">@dimen/sushi_small_rating_min_width</item>
    </style>

</resources>