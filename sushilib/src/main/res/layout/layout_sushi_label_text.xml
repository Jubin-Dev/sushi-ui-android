<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/sushi_spacing_page_side"
    android:layout_marginEnd="@dimen/sushi_spacing_page_side"
    android:orientation="horizontal">


    <com.zomato.sushilib.atoms.textviews.SushiTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:gravity="start"
        android:text="Listing title"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/sushi_textsize_400" />


    <com.zomato.sushilib.atoms.textviews.SushiTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sushi_spacing_between_large"
        android:layout_weight="3"
        android:gravity="end"
        android:text="LABEL"
        android:textAllCaps="true"
        android:textColor="?android:attr/textColorSecondary" />


</LinearLayout>