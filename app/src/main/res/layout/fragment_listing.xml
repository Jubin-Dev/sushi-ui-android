<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/listingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zomato.sushilib.molecules.listings.SushiTwoLineListing
            android:id="@+id/twoLineListing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bodyText="@string/sample_listing_body"
            app:headlineText="@string/sample_listing_headline" />


        <com.zomato.sushilib.molecules.listings.SushiImageDualTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_extra"
            app:subtitle="nkljansdlnlsd"
            app:title="Blablabalbal" />

        <com.zomato.sushilib.molecules.listings.SushiLabelDualTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_extra" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_extra"
            android:background="@color/sushi_white"
            android:orientation="vertical"
            android:padding="@dimen/sushi_spacing_page_side">

            <com.zomato.sushilib.atoms.textviews.SushiTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heading"
                android:textSize="@dimen/sushi_textsize_700" />

            <com.zomato.sushilib.molecules.listings.SushiIconText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sushi_spacing_extra"
                android:text="Listing title" />

            <com.zomato.sushilib.molecules.listings.SushiIconText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sushi_spacing_extra"
                android:text="Listing title" />

            <com.zomato.sushilib.molecules.listings.SushiIconText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sushi_spacing_extra"
                android:text="Listing title" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>