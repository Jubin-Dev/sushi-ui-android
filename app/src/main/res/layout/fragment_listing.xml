<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/listingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zomato.sushilib.molecule.listing.ZDualTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.zomato.sushilib.molecule.listing.ZImageDualTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_extra"/>

        <com.zomato.sushilib.molecule.listing.ZLabelDualTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_extra"/>


    </LinearLayout>

</ScrollView>