<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sushi_spacing_page_side"
        android:layout_marginEnd="@dimen/sushi_spacing_page_side"
        android:paddingBottom="@dimen/sushi_spacing_base"
        android:orientation="vertical">

        <include layout="@layout/layout_heading_large_tag" />

        <include layout="@layout/layout_seperator" />

        <com.zomato.sushilib.atoms.textviews.SushiTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_loose"
            android:text="Tap to rate"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/sushi_textsize_600"
            app:sushiFontWeight="medium" />

        <com.zomato.sushilib.molecules.ratings.SushiRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_macro"
            android:layout_marginBottom="@dimen/sushi_spacing_loose" />

        <include layout="@layout/layout_seperator" />


        <com.zomato.sushilib.atoms.textviews.SushiTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_loose"
            android:text="Static rating streak"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/sushi_textsize_600"
            app:sushiFontWeight="medium" />

        <com.zomato.sushilib.molecules.ratings.SushiSmallRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_macro"
            android:layout_marginBottom="@dimen/sushi_spacing_loose"
            app:rating="3" />

        <include layout="@layout/layout_seperator" />


        <com.zomato.sushilib.atoms.textviews.SushiTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_loose"
            android:text="We have rich set of epic tags"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/sushi_textsize_600"
            app:sushiFontWeight="medium" />

        <com.zomato.sushilib.atoms.textviews.SushiTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_nano"
            android:text="You guys call this chips as well :)"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/sushi_textsize_300"
            app:sushiFontWeight="medium" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_base"
            android:orientation="horizontal">

            <com.zomato.sushilib.atoms.textviews.SushiTag
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tagColor="@color/sushi_green_600"
                android:text="0.0" />


            <com.zomato.sushilib.atoms.textviews.SushiTag
                app:tagColor="@color/sushi_yellow_600"
                app:tagType="capsule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sushi_spacing_base"
                android:text="2.1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sushi_spacing_base"
            android:orientation="horizontal">

            <com.zomato.sushilib.atoms.textviews.SushiTag
                app:tagSize="medium"
                app:tagType="rounded"
                app:tagColor="@color/sushi_red_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Epic tag"
                android:textColor="@color/sushi_white" />

            <com.zomato.sushilib.atoms.textviews.SushiTag
                app:tagSize="medium"
                app:tagType="rounded"
                app:tagColor="@color/sushi_red_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sushi_spacing_base"
                android:text="Epic tag"
                android:textColor="@color/sushi_red_500" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/sushi_spacing_base"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zomato.sushilib.atoms.textviews.SushiTag
                android:text="Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/sushi_spacing_base"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zomato.sushilib.atoms.textviews.SushiTag
                app:tagSize="medium"
                android:text="Rounded Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.zomato.sushilib.atoms.textviews.SushiTag
                android:layout_marginStart="@dimen/sushi_spacing_base"
                app:tagSize="small"
                android:text="Rounded Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:layout_marginTop="@dimen/sushi_spacing_base"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zomato.sushilib.atoms.textviews.SushiTag
                app:tagType="capsule"
                app:tagSize="large"
                android:text="Capsule Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.zomato.sushilib.atoms.textviews.SushiTag
                android:layout_marginStart="@dimen/sushi_spacing_base"
                app:tagType="capsule"
                app:tagSize="medium"
                android:text="Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.zomato.sushilib.atoms.textviews.SushiTag
                android:layout_marginStart="@dimen/sushi_spacing_base"
                app:tagType="capsule"
                app:tagSize="small"
                android:text="Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_marginTop="@dimen/sushi_spacing_base"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zomato.sushilib.atoms.textviews.SushiTag
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="AD"
            app:tagColor="@color/sushi_grey_800"
            app:tagSize="tiny"
            app:tagType="rounded" />

        <com.zomato.sushilib.atoms.textviews.SushiTag
            android:layout_marginStart="@dimen/sushi_spacing_base"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            app:tagColor="@color/sushi_red_500"
            app:tagSize="tiny"
            app:tagType="rounded" />
    </LinearLayout>


    </LinearLayout>
</ScrollView>