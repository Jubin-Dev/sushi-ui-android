<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ImageViewsFragment">

    <com.zomato.sushilib.atoms.views.ZRoundRectView
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@color/sushi_red_500"
        android:backgroundTintMode="add"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:zCornerRadius="10dp"/>

    <com.zomato.sushilib.atoms.views.ZRoundRectView
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@color/sushi_purple_500"
        android:backgroundTintMode="add"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:zCornerRadius="10dp"/>

    <com.zomato.sushilib.atoms.views.ZCircleView
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@color/sushi_green_500"
        android:backgroundTintMode="add"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp" />

</LinearLayout>