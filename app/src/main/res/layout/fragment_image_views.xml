<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.images.ImagesMainFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zomato.sushilib.atoms.textviews.SushiTextView
            style="@style/Theme.Sushi.Section.Heading"
            android:text="Info Cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/bg_sample1"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <com.zomato.sushilib.atoms.textviews.SushiTextView
            style="@style/Theme.Sushi.Section.Heading"
            android:text="Ads CTL"
            android:layout_marginTop="@dimen/sushi_spacing_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/sushi_spacing_mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.zomato.sushilib.atoms.imageviews.SushiRoundedImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="@dimen/sushi_spacing_micro"
                    android:layout_margin="@dimen/sushi_spacing_mini"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_sample2"
                    app:cornerRadius="@dimen/sushi_spacing_micro" />

                <com.zomato.sushilib.atoms.imageviews.SushiRoundedImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="@dimen/sushi_spacing_mini"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_sample2"
                    app:cornerRadius="@dimen/sushi_spacing_micro" />

                <com.zomato.sushilib.atoms.imageviews.SushiRoundedImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="@dimen/sushi_spacing_mini"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_sample2"
                    app:cornerRadius="@dimen/sushi_spacing_micro" />

            </LinearLayout>
        </HorizontalScrollView>

        <com.zomato.sushilib.atoms.textviews.SushiTextView
            style="@style/Theme.Sushi.Section.Heading"
            android:text="Profile Covers"
            android:layout_marginTop="@dimen/sushi_spacing_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.zomato.sushilib.atoms.imageviews.SushiCircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="@dimen/sushi_spacing_micro"
                    android:layout_margin="@dimen/sushi_spacing_mini"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_sample1" />

                <com.zomato.sushilib.atoms.imageviews.SushiCircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:elevation="@dimen/sushi_spacing_micro"
                    android:layout_margin="@dimen/sushi_spacing_mini"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_sample1" />

                <com.zomato.sushilib.atoms.imageviews.SushiCircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="@dimen/sushi_spacing_mini"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_sample1" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>


</ScrollView>