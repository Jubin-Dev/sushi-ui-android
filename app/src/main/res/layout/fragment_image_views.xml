<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ImageViewsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zomato.sushilib.atoms.views.SushiRoundRectView
            android:background="@drawable/bg_sample1"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:sushiCornerRadius="10dp"/>

        <com.zomato.sushilib.atoms.views.SushiRoundRectView
            android:background="@drawable/bg_sample2"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            app:sushiCornerRadius="10dp"/>

        <com.zomato.sushilib.atoms.views.SushiCircleView
            android:id="@+id/cvGreen"
            android:background="@drawable/bg_sample2"
            android:backgroundTint="@color/sushi_green_500"
            android:backgroundTintMode="multiply"
            android:elevation="5dp"
            android:layout_margin="10dp"
            android:layout_width="170dp"
            android:layout_height="120dp" />

        <com.zomato.sushilib.atoms.views.SushiCircleView
            android:id="@+id/cvBlue"
            android:background="@drawable/bg_sample1"
            android:backgroundTint="@color/sushi_blue_300"
            android:backgroundTintMode="multiply"
            android:padding="50dp"
            android:elevation="5dp"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <com.zomato.sushilib.atoms.imageviews.SushiCircleImageView
            android:id="@+id/civFoodPic"
            android:elevation="5dp"
            android:layout_margin="10dp"
            android:src="@drawable/bg_food"
            android:layout_width="120dp"
            android:layout_height="120dp" />

    </LinearLayout>



</ScrollView>