<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CardStackFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSample"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.zomato.sushilib.organisms.stacks.page.ExpandablePageLayout
        android:id="@+id/expandable_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sushi_blue_100"
        android:elevation="20dp">

        <com.zomato.sushilib.molecules.listings.SushiTextListing
            app:bodyText="Fine Dining - Continental"
            app:headlineText="Barbossa Food House"
            app:labelText="Use code ZOMATO"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.zomato.sushilib.organisms.stacks.page.ExpandablePageLayout>

</FrameLayout>