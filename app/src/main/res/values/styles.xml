<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Sushi">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sushi_red_500</item>
        <item name="colorPrimaryDark">@color/sushi_red_800</item>
        <item name="colorAccent">@color/sushi_green_500</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextPreviewStrip">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.ColorPreviewStrip">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>


    <style name="SushiActionBar" parent="Theme.AppCompat.Light">
        <item name="android:titleTextStyle">@style/TextAppearance.Sushi.SemiBold</item>
        <item name="android:subtitleTextAppearance">@style/TextAppearance.Sushi</item>
    </style>

</resources>
